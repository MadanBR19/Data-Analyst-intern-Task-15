import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# 1. Load Dataset
df = pd.read_csv('Online Retail II.csv', encoding='ISO-8859-1')

# 2. Data Cleaning
df = df.dropna(subset=['Customer ID'])
df = df[~df['Invoice'].astype(str).str.startswith('C')]  # remove cancelled
df['InvoiceDate'] = pd.to_datetime(df['InvoiceDate'])

# Create Total Amount column
df['TotalAmount'] = df['Quantity'] * df['Price']

# 3. Calculate RFM Metrics
snapshot_date = df['InvoiceDate'].max() + pd.Timedelta(days=1)

rfm = df.groupby('Customer ID').agg({
    'InvoiceDate': lambda x: (snapshot_date - x.max()).days,
    'Invoice': 'nunique',
    'TotalAmount': 'sum'
})

rfm.columns = ['Recency', 'Frequency', 'Monetary']

# 4. Create RFM Score using Quantiles
rfm['R_Score'] = pd.qcut(rfm['Recency'], 4, labels=[4,3,2,1])
rfm['F_Score'] = pd.qcut(rfm['Frequency'].rank(method='first'), 4, labels=[1,2,3,4])
rfm['M_Score'] = pd.qcut(rfm['Monetary'], 4, labels=[1,2,3,4])

rfm['RFM_Score'] = rfm['R_Score'].astype(str) + \
                   rfm['F_Score'].astype(str) + \
                   rfm['M_Score'].astype(str)

# 5. Assign Segment Labels
def segment_customer(df):
    if df['RFM_Score'] >= '444':
        return 'Champions'
    elif df['RFM_Score'][0] == '4':
        return 'Loyal Customers'
    elif df['RFM_Score'][1] == '4':
        return 'Big Spenders'
    elif df['RFM_Score'][0] == '1':
        return 'At Risk'
    else:
        return 'Regular'

rfm['Segment'] = rfm.apply(segment_customer, axis=1)

# 6. Visualization
segment_counts = rfm['Segment'].value_counts()

plt.figure()
segment_counts.plot(kind='bar')
plt.title('Customer Segments')
plt.xlabel('Segment')
plt.ylabel('Count')
plt.show()

# 7. Export CSV
rfm.to_csv('rfm_segments.csv')

print("RFM Analysis Completed Successfully!")
